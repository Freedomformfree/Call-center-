{
  "api_keys": {
    "twilio": {
      "account_sid": "YOUR_TWILIO_ACCOUNT_SID",
      "auth_token": "YOUR_TWILIO_AUTH_TOKEN",
      "phone_number": "YOUR_TWILIO_PHONE_NUMBER",
      "description": "Twilio API for SMS and voice calls"
    },
    "openai": {
      "api_key": "YOUR_OPENAI_API_KEY",
      "organization": "YOUR_OPENAI_ORG_ID",
      "description": "OpenAI API for AI-powered features"
    },
    "sendgrid": {
      "api_key": "YOUR_SENDGRID_API_KEY",
      "from_email": "noreply@yourcompany.com",
      "description": "SendGrid API for email notifications"
    },
    "stripe": {
      "publishable_key": "YOUR_STRIPE_PUBLISHABLE_KEY",
      "secret_key": "YOUR_STRIPE_SECRET_KEY",
      "webhook_secret": "YOUR_STRIPE_WEBHOOK_SECRET",
      "description": "Stripe API for payment processing"
    },
    "google_cloud": {
      "project_id": "YOUR_GCP_PROJECT_ID",
      "credentials_file": "path/to/service-account.json",
      "description": "Google Cloud Platform APIs"
    },
    "microsoft_graph": {
      "client_id": "YOUR_MICROSOFT_CLIENT_ID",
      "client_secret": "YOUR_MICROSOFT_CLIENT_SECRET",
      "tenant_id": "YOUR_MICROSOFT_TENANT_ID",
      "description": "Microsoft Graph API for Office 365 integration"
    },
    "hubspot": {
      "api_key": "YOUR_HUBSPOT_API_KEY",
      "portal_id": "YOUR_HUBSPOT_PORTAL_ID",
      "description": "HubSpot CRM integration"
    },
    "salesforce": {
      "client_id": "YOUR_SALESFORCE_CLIENT_ID",
      "client_secret": "YOUR_SALESFORCE_CLIENT_SECRET",
      "username": "YOUR_SALESFORCE_USERNAME",
      "password": "YOUR_SALESFORCE_PASSWORD",
      "security_token": "YOUR_SALESFORCE_SECURITY_TOKEN",
      "description": "Salesforce CRM integration"
    },
    "zoom": {
      "api_key": "YOUR_ZOOM_API_KEY",
      "api_secret": "YOUR_ZOOM_API_SECRET",
      "description": "Zoom API for video conferencing"
    },
    "slack": {
      "bot_token": "YOUR_SLACK_BOT_TOKEN",
      "webhook_url": "YOUR_SLACK_WEBHOOK_URL",
      "description": "Slack integration for notifications"
    }
  },
  "sim800c_modules": {
    "module_1": {
      "gemini_api_key": "YOUR_GEMINI_API_KEY_MODULE_1",
      "port": "/dev/ttyUSB0",
      "baud_rate": 9600,
      "description": "Primary SIM800C module"
    },
    "module_2": {
      "gemini_api_key": "YOUR_GEMINI_API_KEY_MODULE_2",
      "port": "/dev/ttyUSB1",
      "baud_rate": 9600,
      "description": "Secondary SIM800C module"
    },
    "module_3": {
      "gemini_api_key": "YOUR_GEMINI_API_KEY_MODULE_3",
      "port": "/dev/ttyUSB2",
      "baud_rate": 9600,
      "description": "Backup SIM800C module"
    }
  },
  "hardware_config": {
    "sim800c": {
      "charge_port": "/dev/ttyUSB0",
      "at_command_port": "/dev/ttyUSB1",
      "audio_device": "/dev/snd/pcmC1D0p",
      "microphone_device": "/dev/snd/pcmC1D0c",
      "description": "SIM800C hardware configuration with USB sound card"
    },
    "usb_sound_card": {
      "device_name": "USB Audio Device",
      "input_channels": 1,
      "output_channels": 2,
      "sample_rate": 44100,
      "description": "USB sound card for audio processing"
    }
  },
  "business_settings": {
    "company_info": {
      "name": "Your Company Name",
      "phone": "+1234567890",
      "email": "contact@yourcompany.com",
      "address": "123 Business St, City, State 12345",
      "website": "https://yourcompany.com"
    },
    "ai_settings": {
      "default_language": "en",
      "response_tone": "professional",
      "max_call_duration": 300,
      "auto_follow_up": true,
      "lead_scoring_threshold": 70
    }
  },
  "security": {
    "encryption": {
      "algorithm": "AES-256-GCM",
      "key_rotation_days": 30
    },
    "access_control": {
      "session_timeout": 3600,
      "max_login_attempts": 5,
      "password_policy": {
        "min_length": 8,
        "require_uppercase": true,
        "require_lowercase": true,
        "require_numbers": true,
        "require_symbols": true
      }
    }
  },
  "monitoring": {
    "logging": {
      "level": "INFO",
      "retention_days": 30,
      "max_file_size": "100MB"
    },
    "alerts": {
      "email_notifications": true,
      "sms_notifications": true,
      "webhook_notifications": true
    }
  }
}